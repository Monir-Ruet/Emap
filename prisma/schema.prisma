generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Violance {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  district          String   
  parlamentarySeat  String   
  violanceDate      DateTime 
  title             String
  description       String
  responsibleParty  String[]
  violanceType      String[]
  gender            String[]
  minority          String[]

  createdAt DateTime @default(now())

  @@index([district, violanceDate, createdAt])
  @@index([parlamentarySeat, violanceDate, createdAt])
}