generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Violence {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  district          String   
  parliamentarySeat String   
  violenceDate      DateTime 
  title             String
  description       String
  responsibleParty  String[]
  mild              String?
  moderate          String?
  extreme           String?
  reference         String?
  gender            String?
  minority          String[]
  deathCount        Int

  createdAt DateTime @default(now())

  @@index([district, violenceDate, createdAt])
  @@index([parliamentarySeat, violenceDate, createdAt])
}

model User {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  email        String @unique
  name         String
  passwordHash String
}
